<div class="hero--food">
  <section class="slab slab--hero">
    <header class="main-header">
      <div class="toolbar toolbar--wrap-when-small">
        <div class="toolbar__left"></div>
        <div class="toolbar__right>">
          <% if I18n.locale != :en %>
            <a class="toolbar__item text--small link--subtle" lang="es" href="?locale=en">English</a>
          <% end %>
          <% if I18n.locale != :es %>
            <a class="toolbar__item text--small link--subtle" lang="es" href="?locale=es">Español</a>
          <% end %>
          <% if I18n.locale != :zh %>
            <a class="toolbar__item text--small link--subtle" lang="es" href="?locale=zh">中文</a>
          <% end %>
        </div>
      </div>
    </header>
    <div class="grid">
      <div class="grid__item width-three-fourths">
        <h2 class="heading-60"><%= t("info.heading") %></h2>
      </div>
    </div>
  </section>
  <section class="slab slab--white">
    <div class="grid">
      <div class="grid__item width-seven-twelfths">
        <h3><%= t("info.what_are_question") %></h3>
        <p class="form-card__body-text"><%= t("info.what_are_answer_html") %></p>
        <h3 class="spacing-above-60" class="spacing-above-60"><%= t("info.who_is_eligible_question") %></h3>
        <p class="form-card__body-text"><%= t("info.who_is_eligible_answer_html") %></p>
        <h3 class="spacing-above-60"><%= t("info.how_do_get_question") %></h3>
        <p class="form-card__body-text"><%= t("info.how_do_get_answer_1_html") %></p>
        <p class="form-card__body-text"><%= t("info.how_do_get_answer_2_html") %></p>
        <h3 class="spacing-above-60"><%= t("info.already_got_question") %></h3>
        <p class="form-card__body-text"><%= t("info.already_got_answer_html") %></p>
        <h3 class="spacing-above-60"><%= t("info.what_if_to_go_question") %></h3>
        <p class="form-card__body-text"><%= t("info.what_if_to_go_answer_html") %></p>
        <h3 class="spacing-above-60"><%= t("info.how_much_question") %></h3>
        <p class="form-card__body-text"><%= t("info.how_much_answer_1_html") %></p>
        <p class="form-card__body-text"><%= t("info.how_much_answer_2_html") %></p>
        <h3 class="spacing-above-60"><%= t("info.what_can_i_buy_question") %></h3>
        <p class="form-card__body-text"><%= t("info.what_can_i_buy_answer_1_html") %></p>
        <p class="form-card__body-text"><%= t("info.what_can_i_buy_answer_2_html") %></p>
        <h3 class="spacing-above-60"><%= t("info.what_is_the_deadline_question") %></h3>
        <p class="form-card__body-text"><%= t("info.what_is_the_deadline_answer_html") %></p>
        <h3 class="spacing-above-60"><%= t("info.what_if_i_applied_question") %></h3>
        <p class="form-card__body-text"><%= t("info.what_if_i_applied_answer_html") %></p>
        <h3 class="spacing-above-60"><%= t("info.how_long_question") %></h3>
        <p class="form-card__body-text"><%= t("info.how_long_answer") %></p>
        <h3 class="spacing-above-60"><%= t("info.if_i_get_question") %></h3>
        <p class="form-card__body-text"><%= t("info.if_i_get_answer_1_html") %></p>
        <p class="form-card__body-text"><%= t("info.if_i_get_answer_2_html") %></p>
      </div>
    </div>
  </section>
</div>
