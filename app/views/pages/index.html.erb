<% content_for(:template_name, "homepage") %>
<% content_for(:hero_image_header, "hero-apple") %>

<div class="hero--apple">
  <header class="main-header">
    <div class="toolbar toolbar--wrap-when-small">
      <div class="toolbar__left">
      </div>
      <div class="toolbar__right>">
        <a class="toolbar__item text--small link--subtle" lang="zh" href="?new_locale=zh">中文</a>
        <a class="toolbar__item text--small link--subtle" lang="es" href="?new_locale=es">Español</a>
      </div>
    </div>
  </header>
  <section class="slab slab--hero">
    <div class="grid">
      <div class="grid__item width-three-fourths">
        <h2 class="heading-60">Get money to buy healthy food while schools are closed.</h2>
        <h1 class="text-25">Sign up for P-EBT in 5 minutes.</h1>
        <%= link_to(raw("Sign up now <i class=\"button__icon icon-arrow_forward\"></i>"), how_path, class: "button button--primary") %>
      </div>
    </div>
  </section>
  <section class="slab slab--white">
    <div class="grid">
      <div class="grid__item width-seven-twelfths">
        <p class="form-card__body-text">This program, called P-EBT, is for children who are normally able to get free or reduced price school lunches. Apply and get up to $TK a month to spend on groceries.</p>
        <%= image_tag("ca-dept-ed") %>
        <p class="form-card__body-text">This is a program of the California Department of Education.</p>
      </div>
    </div>
  </section>
</div>